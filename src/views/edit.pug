extends base.pug

block content
  h4 Update video
  form(method="POST") 
    input(
      name="title",
      placeholder="Video Title",
      value=video.title,
      required,
      maxlength=40
    )
    input(
      placeholder="Description",
      required,
      type="text",
      name="description",
      minLength=5,
      value=video.description
    )
    input(
      placeholder="Hashtags, separated by comma.",
      required,
      type="text",
      name="hashtags",
      value=video.hashtags.join()
    )
    input(value="Save", type="submit")
//- POST는 DATA를 BACKEND로 보낼 때 사용
